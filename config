# start a programm
set $run_programm Run: (p) Phpstorm, (b) Chrome Browser, (f) Firefox, (c) Calculator, (o) Nautilus, (x) Franz, (n) Tusk.
mode "$run_programm" {     
        bindsym p exec --no-startup-id  ~/PhpStorm-191.6183.95/bin/phpstorm.sh, mode "default"
        bindsym b exec --no-startup-id  google-chrome, mode "default"
        bindsym f exec --no-startup-id  firefox, mode "default"
        bindsym c exec --no-startup-id  gnome-calculator, mode "default"
	bindsym x exec --no-startup-id  franz, mode "default"
	bindsym n exec --no-startup-id  tusk, mode "default"
	bindsym o exec --no-startup-id  nautilus, mode "default"

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+p mode "$run_programm"

exec_always xrandr --output LVDS-1-1 --primary --mode 1920x1080 --output DP-1 --above LVDS-1-1 --output DP-2 --left-of DP-1 --output VGA-1-1 --right-of DP-1
