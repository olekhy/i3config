# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
        font pango:DejaVu sourcecodepro Sans Mono 12
	status_command i3status --config ~/.config/i3/i3status.config
	tray_output DP-1
	tray_output LVDS-1-1
	separator_symbol  

	colors {
        	background #000077
	        statusline #ff751a
        	separator #ffffff

	        focused_workspace  #4c7899 #285577 #ffffff
        	active_workspace   #333333 #5f676a #ffffff
	        inactive_workspace #333333 #222222 #888888
	        urgent_workspace   #2f343a #900000 #ffffff
	        binding_mode       #2f343a #900000 #ffffff
	}
}

# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the first scratchpad window
bindsym $mod+minus scratchpad show

# sound more than 100%  pactl set-sink-volume 0 150%
exec_always --no-startup-id amixer -q set Master 33dB+ unmute
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 0 +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume 0 -5%
bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle 

